<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">



            <EditText
                android:layout_alignParentLeft="true"
                android:id="@+id/entert"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:hint="Enter text or tap on mic"
                android:singleLine="true"
                android:textAllCaps="false"
                android:layout_weight="1.7"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/search_txt"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="48dp"
                android:background="@drawable/search"
                android:clickable="true"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#212121">

        <ImageButton
            android:id="@+id/SignBible"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/menu3"
            android:clickable="true" />

        <ImageButton
            android:id="@+id/TouchToExit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/close"
            android:clickable="true" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@+id/linearLayout1">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="45dp"
            android:src="@drawable/main" />


        <ImageButton
            android:id="@+id/VoiceConvert"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:foreground="@drawable/mics"
            android:src="@drawable/voice"
            tools:src="@drawable/voice"
            android:layout_marginVertical="30dp"/>


    </LinearLayout>

</RelativeLayout>